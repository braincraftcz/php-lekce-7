{% extends 'base-bootstrap.html.twig' %}

{% block title %}Hello HomeworkController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <table>
        <tr>
            <td><b>Student</b></td>
            <td><b>Předmět</b></td>
            <td><b>Známka</b></td>
        </tr>
        {% for pupil in pupils %}
            {% for grade in pupil.grades if grade.grade < 3 %}
                <tr>
                    <td>{{ pupil.name }}</td>
                    <td>{{ grade.subject }}</td>
                    <td>{{ grade.grade }}</td>
                </tr>
            {% endfor %}
        {% endfor %}
    </table>
</div>
{% endblock %}
